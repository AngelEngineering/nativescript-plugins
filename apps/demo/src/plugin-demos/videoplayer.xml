  navigatingTo="navigatingTo"
  navigatingFrom="navigatingFrom"
  class="page">
  <Page.actionBar>
    <ActionBar title="videoplayer"
      icon=""
      class="action-bar">
    </ActionBar>
  </Page.actionBar>
  <StackLayout>
    <Video:VideoPlayer id="nsVideoPlayer"
      controls="true"
      loop="false"
      autoplay="false"
      height="400"
      src=""
      marginBottom="30"
      opacity="1"
      visibility="visible" />

