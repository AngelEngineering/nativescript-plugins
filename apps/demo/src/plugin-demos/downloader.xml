<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
  <Page.actionBar>
    <ActionBar title="downloader" icon="" class="action-bar">
    </ActionBar>
  </Page.actionBar>
  <StackLayout class="p-20">
    <ScrollView class="h-full">
      <StackLayout>
        <Button text="Download valid jpeg url" tap="{{ downloadValid }}" class="btn btn-primary"/>
        <Button text="Download invalid url" tap="{{ downloadInvalid }}" class="btn btn-primary"/>
        <Button text="Download valid 1 MB mp4 url" tap="{{ downloadValidMovie }}" class="btn btn-primary"/>
        <Button text="Download valid 150 MB mp4 url" tap="{{ downloadLargeValidMovie }}" class="btn btn-primary"/>
        <Label text="Downloaded file:" color="black" textWrap="true"/>
        <StackLayout id="downloadedFiles"/>
      </StackLayout>
    </ScrollView>
  </StackLayout>
</Page>