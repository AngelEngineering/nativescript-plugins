<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" loaded="onLoaded" class="page">
    <Page.actionBar>
        <ActionBar title="flashlight" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <Label text = "Disabled" id="labelStatus"/>
            <TextField hint="Intensity (0.0 - 1.0) iOS only" id="inputIntensity"> </TextField>
            <Button text="Enable flashlight" tap="{{ toggleLight }}" class="btn btn-primary" id="buttonLight"> </Button>            
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>